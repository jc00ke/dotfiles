[user]
	name = Jesse Cooke
  email = jesse@relativepath.io
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOB6m3RWpvewEgYMSRumUt4mKIMbG2OfutRxEF2Bdn7m
[format]
  pretty="format:%C(yellow)%h%Creset %C(magenta bold)%aN%Creset%C(blue) %ad%Creset %s"
[push]
  default = current
[branch]
  autosetuprebase = always
[alias]
  a = add
  amend = commit --amend -C HEAD # amend to the last commit
  authors = shortlog -s -n --all --no-merges
  b = branch
  c = commit
  cl = clone
  co = checkout
  cp = cherry-pick
  d = diff
  fp = force-push
  force-push = "push --force-with-lease"
  m = merge
  p = push --follow-tags
  pr = pull-request # shorten up pull-request
  pu = pull
  r = reset
  rewrite-last = rebase -i HEAD^ # rewrite last commit msg
  rw = rewrite-last
  ri = rebase --interactive --autosquash # interactive rebase
  s = status
  serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
  staged = diff --cached # diff the index against the previous commit
  update-remotes = remote update --prune # update all remotes, pruning removed tracking branches
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  pager = delta
[color]
  ui = true
[color "branch"]
  current = cyan reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[commit]
  gpgsign = true
[init]
	defaultBranch = main
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[diff]
	external = difft
