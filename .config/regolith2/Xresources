i3-wm.bar.trayoutput: primary

! 35_i3-gaps defaulted inc_gaps_big and dec_gaps_big to Shift+plus/minus
! respectively, which conflicted with my scratchpad mapping.
i3-wm.binding.inc_gaps_big: "$alt+Shift+plus"
i3-wm.binding.dec_gaps_big: "$alt+Shift+minus"
i3-wm.binding.scratchpad: Shift+plus
i3-wm.binding.move_scratchpad: Shift+minus

#include "solarized-dark-colors"

i3-wm.client.focused.color.child_border: color_magenta
i3-wm.client.focused.color.border: color_magenta
i3-wm.window.border.size: 2
i3-wm.client.focused.color.indicator: color_blue
i3-wm.client.focused_inactive.color.indicator: color_orange

regolith.look.path: /usr/share/regolith-look/solarized-dark
