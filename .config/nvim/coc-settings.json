{
  "elixir.pathToElixirLS": "~/src/elixir-ls/release/language_server.sh",
  "coc.preferences.colorSupport": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "JavaScript",
    "Markdown",
    "css",
    "elixir",
    "elm",
    "html",
    "json",
    "sh",
    "sql"
  ],
  "codeLens.enable": true,
  "cfnlint.detectCfnRegExps": [".*cfn.y(a|)ml"],
  "diagnostic-languageserver.filetypes": {
    "markdown": ["write-good", "markdownlint"],
    "sh": "shellcheck -x",
    "elixir": ["mix_credo", "mix_credo_compile"],
    "eelixir": ["mix_credo", "mix_credo_compile"],
    "Dockerfile": "hadolint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    // define our formatter so that we can reference it from
    // `diagnostic-languageserver.formatFiletypes`
    "shfmt": {
      "command": "shfmt",
      // all the args below are entirely optional
      // primarily listed here to call out that flags which take an
      // argument (such as `-i <num-spaces>` for specifying indentation)
      // should be split into two strings, the flag and then the value
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    }
  },
  "languageserver": {
    "elmLS": {
      "trace.server": "verbose",
      "command": "elm-language-server",
      "args": ["--stdio"],
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json", "assets/elm/elm.json"],
      "initializationOptions": {
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test",
        "elmAnalyseTrigger": "change"
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "suggest.timeout": 1000
}
